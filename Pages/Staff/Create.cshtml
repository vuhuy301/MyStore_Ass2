@page
@model MyStore_WebApp.Pages.Staff.CreateModel
@{
    ViewData["Title"] = "Add New Staff";
}

<h2>Add New Staff</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Staff.Name" />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" value="@Model.Staff.Password" />
    </div>
    <div class="form-group">
        <label for="Role">Role</label>
        <select class="form-control" id="Role" name="Role">
            <option value="1">Admin</option>
            <option value="0">Staff</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Add Staff</button>
</form>

